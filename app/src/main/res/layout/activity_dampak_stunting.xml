<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0E0E6"
    android:orientation="vertical"
    tools:context=".DampakStunting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dampak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/worksans"
                    android:text="Dampak Stunting"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_dampakpendek"
                    android:layout_width="250dp"
                    android:layout_height="65dp"
                    android:layout_below="@id/dampak"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/rounded_button_white"
                    android:fontFamily="@font/roboto"
                    android:text="Dampak Jangka Pendek"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_dampakpanjang"
                    android:layout_width="250dp"
                    android:layout_height="65dp"
                    android:layout_below="@id/btn_dampakpendek"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/rounded_button_white"
                    android:fontFamily="@font/roboto"
                    android:text="Dampak Jangka Panjang"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>