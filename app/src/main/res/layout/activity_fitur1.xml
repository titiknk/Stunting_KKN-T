<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0E0E6"
    android:orientation="vertical"
    tools:context=".Fitur1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/apaitustunting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColorHint="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/worksans"
                    android:text="Apa itu Stunting?"
                    android:textColor="@color/black"
                    android:textSize="34sp" />

                <ImageView
                    android:id="@+id/stunting"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_below="@id/apaitustunting"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/stunting" />

                <TextView
                    android:id="@+id/pengertian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/stunting"
                    android:layout_margin="18dp"
                    android:justificationMode="inter_word"
                    android:text="@string/pengertian"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pengertian"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:justificationMode="inter_word"
                    android:text="@string/data"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>